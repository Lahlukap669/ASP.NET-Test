{
  "ConnectionStrings": {
    "UsersDb": "Server=(localdb)\\mssqllocaldb;Database=UsersDb;Trusted_Connection=True;"
  },
  "Serilog": {
    "MinimumLevel": {
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName", // Adds the host name of the machine
      "WithEnvironmentName" // Adds the environment name (e.g., Development, Production)
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp: dd-MM-yyyy HH:mm:ss} {Level:u3}] |{SourceContext}| {ClientIP} {NameOfHost} {NameOfClient}{NewLine} {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/User-API-.log",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true
        }
      }
    ]
  }
}
